<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinnerCharts"
            android:minWidth="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.froloapp.chart.widget.ChartView
            app:chartStrokeWidth="1.5dp"
            app:xAxisTextColor="@color/gray"
            app:yAxisTextColor="@color/gray"
            app:clickedStampLineColor="@color/gray"
            android:padding="4dp"
            android:id="@+id/chartView"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <com.froloapp.chart.widget.ChartSlider
            app:chartStrokeWidth="1dp"
            app:frameHorizontalBorderWidth="7dp"
            app:frameVerticalBorderWidth="1dp"
            app:maxFrameCompression="0.2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/chartSlider"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <LinearLayout
            android:id="@+id/layoutCheckboxes"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>
</ScrollView>